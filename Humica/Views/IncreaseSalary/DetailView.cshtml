@{

    var gridExtension = Html.DevExpress().GridView(
        settings =>
        {

            settings.Name = "DetailView";
            settings.KeyFieldName = "EmpCode";
            settings.EnableTheming = true;
            settings.EnableRowsCache = true;
            settings.Width = Unit.Percentage(100);
            settings.CallbackRouteValues = new { Action = "DetailView", Controller = "IncreaseSalary" };

            settings.SettingsBehavior.ConfirmDelete = true;
            settings.CommandColumn.Visible = false;
            settings.Settings.ShowGroupPanel = false;
            settings.Settings.ShowFooter = true;
            settings.SettingsContextMenu.Enabled = true;
            settings.SettingsDataSecurity.AllowReadUnlistedFieldsFromClientApi = DefaultBoolean.True;

            settings.Columns.Add(column =>
            {
                column.FieldName = "Branch";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Branch");
            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "Dept";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Dept");
            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "Post";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Post");
            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "Requestor";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Requestor");
            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "Salary";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Salary");
            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "Increase";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Increase");
            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "EffecDate";
                column.Width = 110;
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("EffecDate");
                column.ColumnType = MVCxGridViewColumnType.DateEdit;
                (column.PropertiesEdit as DateEditProperties).DisplayFormatString = "dd.MMM.yyyy";
                (column.PropertiesEdit as DateEditProperties).EditFormatString = "dd.MMM.yyyy";
                (column.PropertiesEdit as DateEditProperties).DisplayFormatInEditMode = true;

            });
            settings.Columns.Add(column =>
            {
                column.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Status");
                column.Width = 100;
                column.FieldName = "Status";
                column.ColumnType = MVCxGridViewColumnType.TextBox;

            });

            settings.SettingsPager.Position = PagerPosition.Bottom;
            settings.SettingsPager.FirstPageButton.Visible = true;
            settings.SettingsPager.LastPageButton.Visible = true;
            settings.SettingsBehavior.AllowFocusedRow = true;
            settings.Settings.HorizontalScrollBarMode = ScrollBarMode.Visible;
            settings.Settings.VerticalScrollableHeight = Humica.EF.MD.SYSession.DealerPageHeigh;
            settings.SettingsBehavior.AllowFocusedRow = true;
            settings.SettingsBehavior.AllowEllipsisInText = true;
            settings.SettingsPager.Visible = true;
            settings.SettingsPager.PageSizeItemSettings.Visible = false;
            settings.SettingsPager.PageSize = 122;
        });
}

@gridExtension.Bind(Model.ListHeader).GetHtml()


