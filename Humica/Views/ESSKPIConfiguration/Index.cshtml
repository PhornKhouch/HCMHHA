@model Humica.Performance.IClsKPIConfig

@Html.DevExpress().PageControl(
settings =>
{
    settings.Name = "pcScrollingAssetClass";
    settings.Width = Unit.Percentage(100);

    settings.EnableTabScrolling = true;
    settings.TabAlign = TabAlign.Justify;

    settings.Styles.Tab.CssClass = "scrolling_Tab";
    if (Humica.EF.MD.SYSession.isAllowedTab(ViewData[Humica.EF.Models.SY.SYConstant.SCREEN_ID].ToString(), "TAB_IndicatorByBU"))
    {
        settings.TabPages.Add(Humica.EF.Models.SY.SYSettings.getLabel("Indicator By BU")).SetContent(() =>
        {
            Html.RenderPartial("GridIndicatorByBU", Model.ListIndicatorByBU);
        });
    }
    if (Humica.EF.MD.SYSession.isAllowedTab(ViewData[Humica.EF.Models.SY.SYConstant.SCREEN_ID].ToString(), "TAB_IndicatorByDepartment"))
    {
        settings.TabPages.Add(Humica.EF.Models.SY.SYSettings.getLabel("Indicator By Department")).SetContent(() =>
        {
            Html.RenderPartial("GridIndicatorByDept", Model.ListIndicatorByDept);
        });
    }
    if (Humica.EF.MD.SYSession.isAllowedTab(ViewData[Humica.EF.Models.SY.SYConstant.SCREEN_ID].ToString(), "TAB_KPIListByBU"))
    {
        settings.TabPages.Add(Humica.EF.Models.SY.SYSettings.getLabel("KPI List By BU")).SetContent(() =>
        {
            Html.RenderPartial("GridKPIListByBU", Model.ListKPIListByBU);
        });
    }
    if (Humica.EF.MD.SYSession.isAllowedTab(ViewData[Humica.EF.Models.SY.SYConstant.SCREEN_ID].ToString(), "TAB_KPIListByDepartment"))
    {
        settings.TabPages.Add(Humica.EF.Models.SY.SYSettings.getLabel("KPI List By Department")).SetContent(() =>
        {
            Html.RenderPartial("GridKPIListByDept", Model.ListKPIListByDept);

        });
    }
}).GetHtml()
