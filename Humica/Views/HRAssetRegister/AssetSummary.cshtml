@model  Humica.Logic.Asset.AssetRegisterObject

@Html.DevExpress().FormLayout(settings =>
{


    settings.Name = "AssetSummary";
    settings.AlignItemCaptionsInAllGroups = true;

    settings.Items.AddGroupItem(m => Model.Header, g =>
    {
        //g.ColCount = 2;
        g.GroupBoxDecoration = GroupBoxDecoration.HeadingLine;
        g.SettingsItemCaptions.HorizontalAlign = FormLayoutHorizontalAlign.Left;
        g.GroupBoxStyle.CssClass = "form-group";
        g.Caption = Humica.EF.Models.SY.SYSettings.getLabel("AssetSummary");

        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Asset Class") + "*";
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().ComboBoxFor(i => i.Header.AssetClassCode, s =>
            {
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ClientInstanceName = "cboAssetClass";
                s.Properties.ValidationSettings.ErrorText = "*";
                s.Properties.TextFormatString = "{0}-{1}";
                s.Properties.TextField = "Description";
                s.Properties.ValueField = "AssetClassCode";
                s.Properties.Columns.Add("AssetClassCode", Humica.EF.Models.SY.SYSettings.getLabel("AssetClassCode"));
                s.Properties.Columns.Add("Description", Humica.EF.Models.SY.SYSettings.getLabel("Description"));
                s.Properties.NullText = Humica.EF.Models.SY.SYSettings.getLabel("_SELECT");
                s.Properties.ClientSideEvents.SelectedIndexChanged = "getAssetClass";
            }).BindList(ViewData["FIXASSETCLASS"]).Render();
        });


        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("PropertyType") + "*";
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().ComboBoxFor(i => i.Header.PropertyType, s =>
            {

                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ValidationSettings.ErrorText = "*";
                s.Properties.TextFormatString = "{1}";
                s.Properties.TextField = "SelectText";
                s.Properties.ValueField = "SelectValue";
                s.Properties.Columns.Add("SelectValue", Humica.EF.Models.SY.SYSettings.getLabel("Code"));
                s.Properties.Columns.Add("SelectText", Humica.EF.Models.SY.SYSettings.getLabel("Description"));
                s.Properties.NullText = Humica.EF.Models.SY.SYSettings.getLabel("_SELECT");
                s.SelectedIndex = 0;
            }).BindList(ViewData["PROPERTYPE_SELECT"]).Render();

        });

        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Status") + "*";
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().ComboBoxFor(i => i.Header.Status, s =>
            {
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ValidationSettings.ErrorText = "*";
                s.Properties.TextFormatString = "{1}";
                s.Properties.TextField = "SelectText";
                s.Properties.ValueField = "SelectValue";
                s.Properties.Columns.Add("SelectValue", Humica.EF.Models.SY.SYSettings.getLabel("Code"));
                s.Properties.Columns.Add("SelectText", Humica.EF.Models.SY.SYSettings.getLabel("Description"));
                s.Properties.NullText = Humica.EF.Models.SY.SYSettings.getLabel("_SELECT");
            }).BindList(ViewData["STATUS_SELECT"]).Render();

        });

        g.Items.Add(m =>
        {
           m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Asset Type") + "*";
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().ComboBoxFor(i => i.Header.AssetTypeID, s =>
            {
                s.ReadOnly = true;
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ClientInstanceName = "cboAssetType";
                s.Properties.ValidationSettings.ErrorText = "*";
                s.Properties.TextFormatString = "{0}-{1}";
                s.Properties.TextField = "Description";
                s.Properties.ValueField = "AssetTypeCode";
                s.Properties.Columns.Add("AssetTypeCode", Humica.EF.Models.SY.SYSettings.getLabel("AssetTypeCode"));
                s.Properties.Columns.Add("Description", Humica.EF.Models.SY.SYSettings.getLabel("Description"));
                s.Properties.NullText = Humica.EF.Models.SY.SYSettings.getLabel("_SELECT");
            }).BindList(ViewData["FIXASSETTYPE"]).Render();

        });

        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Useful Life, Year");

        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().SpinEditFor(i => i.Header.UsefulLifeYear, s =>
            {
                s.Properties.ClientInstanceName = "txtUsefulLifeYear";
                s.ShowModelErrors = true;
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.DecimalPlaces = 2;
                //s.Enabled = false;
                //s.Properties.DisplayFormatString = "C";
                s.ControlStyle.HorizontalAlign = HorizontalAlign.Right;
            }).Render();
        });

        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Quantity");

        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().SpinEditFor(i => i.Header.Qty, s =>
            {
                s.ShowModelErrors = true;
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.DecimalPlaces = 2;
                //s.Enabled = false;
                //s.Properties.DisplayFormatString = "C";
                s.ControlStyle.HorizontalAlign = HorizontalAlign.Right;
            }).Render();
        });

        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Receipt Date");
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().DateEditFor(i => i.Header.ReceiptDate, s =>
            {
                //s.ReadOnly = true;
                s.Properties.NullText = ViewData[Humica.EF.SYSConstant.DATE_FORMAT].ToString();
                s.Properties.EditFormatString = ViewData[Humica.EF.SYSConstant.DATE_FORMAT].ToString();
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ValidationSettings.ErrorText = "*";
                s.Properties.ValidationSettings.Display = Display.None;
                s.Date = DateTime.Now;
            }).Render();
        });
        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("Org. Acquisition Cost");
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().SpinEditFor(i => i.Header.AcquisitionCost, s =>
            {
                s.ShowModelErrors = true;
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.DecimalPlaces = 2;
                s.Properties.ClientInstanceName = "txtChangeCost";
                s.ControlStyle.HorizontalAlign = HorizontalAlign.Right;
            }).Render();
        });
    });

}).GetHtml()
