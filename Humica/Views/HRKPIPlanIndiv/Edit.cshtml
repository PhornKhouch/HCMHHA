@model Humica.Performance.ClsKPIPlanIndividual
<script type="text/javascript">
    var T = false;
   var _c = "@Model.Header.KPIType";
    $(document).ready(function () {
        $('#_btnBackAction').click(function () {
            window.location = "@Humica.EF.Models.SY.SYUrl.getBaseUrl()" + "@ViewData[Humica.EF.Models.SY.SYConstant.CURRENT_URL]";
        });
        $('#_btnSaveActionGrid').click(function () {
            $("form").submit();
        });
    });
    function EndCallBackKPISetup(s, e) {
        $.ajax({
            type: 'post',
            url: _baseUrl +"@ViewData[Humica.EF.Models.SY.SYConstant.CURRENT_URL]"+ '/GetTotalWeight',
            data: { 'Action': 'Create' },
            success: function (data) {
                if (data.MS == "OK") {

                    txtTotalWeight.SetValue(data.TotalW);
                }
                else {
                    AlertMessage(data.MS);
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                AlertMessage(XMLHttpRequest.responseText);
            }
        });
    }
    function SelectKPI_LIST(s, e) {
        if (s.GetSelectedItem() != null) {
            txtKPI.SetValue(s.GetSelectedItem().GetColumnText(1));
        }
    }
    function SelectPIC(s, e) {
        txtPICName.SetValue(s.GetSelectedItem().GetColumnText(1));
        txtPICPosition.SetValue(s.GetSelectedItem().GetColumnText(2));
    }
</script>

