@model Humica.Logic.PR.PROverTimeObject

<script type="text/javascript">

    $(document).ready(function () {
        $('#_btnBackAction').click(function () {
            window.location = "@Humica.EF.Models.SY.SYUrl.getBaseUrl()" + "@ViewData[Humica.EF.Models.SY.SYConstant.CURRENT_URL]";
        });
        $('#_btnSaveActionGrid').click(function () {
            $("form").submit();
        });
    });
    function convert(str) {
            var date = new Date(str),
                mnth = ("0" + (date.getMonth() + 1)).slice(-2),
                day = ("0" + date.getDate()).slice(-2),
                Minutes = ("0" + date.getHours()).slice(-2);
            return [date.getFullYear(), mnth, day, Minutes].join("-");
    }
    function getTime(str) {
        if (str != null) {
            var date = new Date(str),
                mnth = ("0" + (date.getMonth() + 1)).slice(-2),
                day = ("0" + date.getDate()).slice(-2),
                hours = ("0" + date.getHours()).slice(-2);
            minutes = ("0" + date.getMinutes()).slice(-2);
            return [hours, minutes].join(":");
        }
        return null
    }
    function selectValueChanged(s, e) { GetData(); }


    function GetData() {
        $.ajax({
            type: 'post',
            url: _baseUrl + '/PR/PRM/PROverTime/GetData',
            data: { 'FromTime': getTime(txtFromTime.GetValue()), 'ToTime': getTime(txtToTime.GetValue()) },
            success: function (data) {
                if (data.MS == "OK") {
                    txtTotalHour.SetValue(data.totalHour1);
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                AlertMessage(XMLHttpRequest.responseText);

            }
        });
    }
</script>

