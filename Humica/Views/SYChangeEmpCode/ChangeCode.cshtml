@model Humica.Logic.MD.MDChangeEmpCode
@{
    Html.DevExpress().FormLayout(settings =>
    {

        settings.Name = "ChangeCode";
        settings.AlignItemCaptionsInAllGroups = true;

        settings.Items.AddGroupItem(m => Model, g =>
        {

            g.ColCount = 3;
            g.GroupBoxDecoration = GroupBoxDecoration.None;
            g.SettingsItemCaptions.HorizontalAlign = FormLayoutHorizontalAlign.Left;

            g.Items.Add(m =>
            {
                m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("EmpCode From");
            })
            .SetNestedContent(() =>
            {
                Html.DevExpress().TextBoxFor(i => i.EmpCodeFrom, s =>
                {
                    s.Properties.ClientInstanceName = "txtEmpCodeFrom";
                    s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                    s.Properties.ValidationSettings.SetFocusOnError = true;
                    s.Properties.ValidationSettings.ErrorText = "*";
                }).Render();
            });
            g.Items.Add(m =>
            {
                m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("EmpCode To");
            })
            .SetNestedContent(() =>
            {
                Html.DevExpress().TextBoxFor(i => i.EmpCodeTo, s =>
                {
                    s.Properties.ClientInstanceName = "txtEmpCodeTo";
                    s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                    s.Properties.ValidationSettings.SetFocusOnError = true;
                    s.Properties.ValidationSettings.ErrorText = "*";
                }).Render();
            });
        });
    }).GetHtml();

}