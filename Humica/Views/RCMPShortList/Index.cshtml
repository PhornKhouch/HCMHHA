            window.location = "@Humica.EF.Models.SY.SYUrl.getBaseUrl()" + "@ViewData[Humica.EF.Models.SY.SYConstant.CURRENT_URL]" + "Reject?ApplicantID=" + values[0];
        }
    }
    function Selected(s, e) {
        cboApplyPosition.SetValue(s.GetSelectedItem().GetColumnText(1));
    }
    function chk_SelectionChanged(s,e) {
        s.GetSelectedFieldValues("ApplicantID", GetSelectedFieldValuesCallback);
    }
    function GetSelectedFieldValuesCallback(values) {
        selectedIDs = values.join(';');
    }
</script>

