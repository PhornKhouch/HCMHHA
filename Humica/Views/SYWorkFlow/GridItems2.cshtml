@{
    var grid = Html.DevExpress().GridView(
      settings =>
      {

          settings.Name = "gridViewItem2";
          settings.KeyFieldName = "ID";

          settings.Width = Unit.Percentage(100);
          settings.SettingsEditing.Mode = GridViewEditingMode.PopupEditForm;
          settings.CallbackRouteValues = new { Controller = "SYWorkFlow", Action = "GridItems2" };

          settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "SYWorkFlow", Action = "CreatePartial2" };
          settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "SYWorkFlow", Action = "EditPartial2" };
          settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "SYWorkFlow", Action = "DeletePartial2" };


          settings.CommandColumn.Visible = true;
          settings.CommandColumn.ShowDeleteButton = true;
          settings.CommandColumn.FixedStyle = GridViewColumnFixedStyle.Left;
          settings.CommandColumn.ShowNewButtonInHeader = true;
          settings.CommandColumn.ShowCancelButton = true;
          settings.CommandColumn.ShowEditButton = true;
          settings.SettingsBehavior.AllowFocusedRow = true;


          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "ID");
              column.FieldName = "ID";
              column.Visible = false;
              column.ToolTip = "Key 1";
              column.ColumnType = MVCxGridViewColumnType.TextBox;
          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "WFObject");
              column.FieldName = "WFObject";
              column.ColumnType = MVCxGridViewColumnType.ComboBox;
              column.ToolTip = "Key 1";
              column.CellStyle.BackColor = System.Drawing.Color.LightGray;
              var listNumber = (List<Humica.EF.MD.CFWorkFlow>)ViewData["WORK_FLOW_OBJECT"];

              var textProperties = column.PropertiesEdit as ComboBoxProperties;
              textProperties.DataSource = listNumber;
              textProperties.ValueField = "WFObject";
              textProperties.TextField = "WFObject";
              textProperties.ValueType = typeof(string);
              textProperties.Width = Unit.Percentage(100);
          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "WFType");
              column.FieldName = "WFType";
              column.ColumnType = MVCxGridViewColumnType.ComboBox;
              column.CellStyle.BackColor = System.Drawing.Color.LightGray;
              column.ToolTip = "Key 2";
              var listNumber = (List<Humica.EF.MD.SYData>)ViewData["WORK_FLOW_TYPE"];

              var textProperties = column.PropertiesEdit as ComboBoxProperties;
              textProperties.DataSource = listNumber;
              textProperties.ValueField = "SelectValue";
              textProperties.TextField = "SelectText";
              textProperties.ValueType = typeof(string);
              textProperties.Width = Unit.Percentage(100);
          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "WFAction");
              column.FieldName = "WFAction";
              column.ColumnType = MVCxGridViewColumnType.ComboBox;
              column.CellStyle.BackColor = System.Drawing.Color.LightGray;
              column.ToolTip = "Key 3";
              var listNumber = (List<Humica.EF.MD.SYData>)ViewData["WORK_ACTION"];

              var textProperties = column.PropertiesEdit as ComboBoxProperties;
              textProperties.DataSource = listNumber;
              textProperties.ValueField = "SelectValue";
              textProperties.TextField = "SelectText";
              textProperties.ValueType = typeof(string);
              textProperties.Width = Unit.Percentage(100);
          });


          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "WFLevel");
              column.FieldName = "WFLevel";
              column.ColumnType = MVCxGridViewColumnType.SpinEdit;
          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "EMTemplate");
              column.FieldName = "EMTemplate";
              column.ColumnType = MVCxGridViewColumnType.ComboBox;
              var listNumber = (List<Humica.EF.MD.TPEmailTemplate>)ViewData["EMT_LIST"];

              var textProperties = column.PropertiesEdit as ComboBoxProperties;
              textProperties.DataSource = listNumber;
              textProperties.ValueField = "EMTemplateObject";
              textProperties.TextField = "EMTemplateObject";
              textProperties.ValueType = typeof(string);
              textProperties.Width = Unit.Percentage(100);
          });
          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "IsUserEmailOwnerMaster");
              column.FieldName = "IsUserEmailOwnerMaster";
              column.ColumnType = MVCxGridViewColumnType.CheckBox;
          });

          //settings.Columns.Add(column =>
          //{
          //    column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "IsEmailToDealer");
          //    column.FieldName = "IsEmailToDealer";
          //    column.ColumnType = MVCxGridViewColumnType.CheckBox;
          //});

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "PhoneContact");
              column.FieldName = "PhoneContact";
          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "EmailContact");
              column.FieldName = "EmailContact";
          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "MailToAfterResponse");
              column.FieldName = "MailToAfterResponse";
              column.Width = 250;
          });
          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "MailCCAfterResponse");
              column.FieldName = "MailCCAfterResponse";
              column.Width = 250;

          });

          settings.Columns.Add(column =>
          {
              column.Caption = Humica.EF.Models.SY.SYSettings.getLabel(ViewData[Humica.EF.SYSConstant.SCREEN_ID].ToString(), "PhoneToAfterResponse");
              column.FieldName = "PhoneToAfterResponse";
              column.Width = 250;
          });
          settings.SettingsEditing.Mode = GridViewEditingMode.PopupEditForm;
          settings.SettingsEditing.EditFormColumnCount = 2;


          settings.Settings.ShowGroupPanel = false;
          settings.Settings.ShowFooter = true;
          settings.SettingsContextMenu.Enabled = true;
          settings.SettingsContextMenu.RowMenuItemVisibility.DeleteRow = false;
          settings.SettingsContextMenu.RowMenuItemVisibility.EditRow = false;
          settings.SettingsContextMenu.RowMenuItemVisibility.NewRow = false;
          settings.Settings.ShowHeaderFilterButton = true;
          settings.SettingsPopup.HeaderFilter.Height = 200;

          settings.SettingsBehavior.ColumnResizeMode = ColumnResizeMode.Control;
          settings.Settings.HorizontalScrollBarMode = ScrollBarMode.Visible;
          settings.Settings.VerticalScrollBarMode = ScrollBarMode.Visible;
          settings.Settings.VerticalScrollableHeight = Humica.EF.MD.SYSession.PageHieigh;
          settings.SettingsPager.PageSize = 20;

          settings.Settings.VerticalScrollBarMode = ScrollBarMode.Hidden;
          settings.Settings.HorizontalScrollBarMode = ScrollBarMode.Auto;
          settings.Settings.ShowHeaderFilterButton = true;

          settings.SettingsPager.EnableAdaptivity = true;
          settings.SettingsPager.PageSizeItemSettings.Visible = true;

          settings.SettingsExport.EnableClientSideExportAPI = true;
          settings.SettingsExport.ExportSelectedRowsOnly = true;

          settings.SettingsPopup.EditForm.SettingsAdaptivity.MaxWidth = 800;
          settings.SettingsPopup.EditForm.SettingsAdaptivity.Mode = PopupControlAdaptivityMode.Always;
          settings.SettingsPopup.EditForm.SettingsAdaptivity.VerticalAlign = PopupAdaptiveVerticalAlign.WindowCenter;

          settings.SettingsBehavior.AllowFocusedRow = true;


          settings.PreRender = (sender, e) =>
          {
              //((MVCxGridView)sender).StartEdit(1);
          };

          settings.CellEditorInitialize = (s, e) =>
          {
              ASPxEdit editor = (ASPxEdit)e.Editor;
              editor.ValidationSettings.Display = Display.Dynamic;
              if (e.KeyValue != null)
              {
                  if (e.Column.FieldName == "NumberObject")
                  {
                      e.Editor.ReadOnly = true;
                  }
              }
          };

      });


    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()

