@model Humica.Logic.HR.HRStaffProfileObject

@Html.DevExpress().FormLayout(s1 =>
{

    s1.Name = "CreateStaff2";
    s1.AlignItemCaptionsInAllGroups = true;
    var isReadOnly1 = false;
    if (ViewData[Humica.Models.SY.ClsConstant.IS_READ_ONLY1] != null)
    {
        isReadOnly1 = true;
    }
    s1.Items.AddGroupItem(m => Model.Header, g =>
    {
        g.ColCount = 2;
        g.GroupBoxDecoration = GroupBoxDecoration.None;
        g.SettingsItemCaptions.HorizontalAlign = FormLayoutHorizontalAlign.Left;

        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("BankName");
        })
         .SetNestedContent(() =>
         {
             Html.DevExpress().ComboBoxFor(i => i.Header.BankName, s =>
             {
                 s.ReadOnly = isReadOnly1;
                 s.ShowModelErrors = true;
                 s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                 s.Properties.ValidationSettings.SetFocusOnError = true;
                 s.Properties.ValidationSettings.ErrorText = "*";
                 s.Properties.TextFormatString = "{0}";
                 s.Properties.ValueField = "Code";
                 s.Properties.TextField = "Description";
                 s.Properties.NullText = Humica.EF.Models.SY.SYSettings.getLabel("_SELECT");
             }).BindList(ViewData["BANK_SELECT"]).Render();
         });
        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("BankAccName");
        })
      .SetNestedContent(() =>
      {
          Html.DevExpress().TextBoxFor(i => i.Header.BankAccName, s =>
          {
              s.ReadOnly = isReadOnly1;
              s.ShowModelErrors = true;
              s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
              s.Properties.ValidationSettings.SetFocusOnError = true;
              s.Properties.ValidationSettings.ErrorText = "*";
          }).Render();
      });
        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("BankBranch");
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().ComboBoxFor(i => i.Header.BankBranch, s =>
            {
                s.ReadOnly = isReadOnly1;
                s.ShowModelErrors = true;
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ValidationSettings.ErrorText = "*";
                s.Properties.TextFormatString = "{0}";
                s.Properties.ValueField = "Code";
                s.Properties.TextField = "Description";
                s.Properties.NullText = Humica.EF.Models.SY.SYSettings.getLabel("_SELECT");
            }).BindList(ViewData["BANKBRANCH_SELECT"]).Render();
        });
        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("BankAccType");
        })
     .SetNestedContent(() =>
     {
         Html.DevExpress().TextBoxFor(i => i.Header.BankAccType, s =>
         {
             s.ReadOnly = isReadOnly1;
             s.ShowModelErrors = true;
             s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
             s.Properties.ValidationSettings.SetFocusOnError = true;
             s.Properties.ValidationSettings.ErrorText = "*";
         }).Render();
     });
        // g.Items.Add(m =>
        // {
        //     m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("BankFee");
        // })
        //.SetNestedContent(() =>
        //{
        //    Html.DevExpress().SpinEditFor(i => i.Header.BankFee, s =>
        //    {
        //        s.ShowModelErrors = true;
        //        s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
        //        s.Properties.ValidationSettings.SetFocusOnError = true;
        //        s.Properties.ValidationSettings.ErrorText = "*";
        //    }).Render();
        //});
        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("CheckSum");
        })
      .SetNestedContent(() =>
      {
          Html.DevExpress().TextBoxFor(i => i.Header.CheckSum, s =>
          {
              s.ReadOnly = isReadOnly1;
              s.ShowModelErrors = true;
              s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
              s.Properties.ValidationSettings.SetFocusOnError = true;
              s.Properties.ValidationSettings.ErrorText = "*";
          }).Render();
      });
        g.Items.Add(m =>
        {
            m.Caption = Humica.EF.Models.SY.SYSettings.getLabel("BankAcc");
            m.ColSpan = 2;
        })
        .SetNestedContent(() =>
        {
            Html.DevExpress().TextBoxFor(i => i.Header.BankAcc, s =>
            {
                s.ReadOnly = isReadOnly1;
                s.Width = Unit.Percentage(100);
                s.ShowModelErrors = true;
                s.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithTooltip;
                s.Properties.ValidationSettings.SetFocusOnError = true;
                s.Properties.ValidationSettings.ErrorText = "*";
            }).Render();
        });
    });
}).GetHtml()