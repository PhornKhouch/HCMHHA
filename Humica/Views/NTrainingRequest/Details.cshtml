        });
        $('#_btnReceive').click(function () {
            window.location = "@Humica.EF.Models.SY.SYUrl.getBaseUrl()" + "@ViewData[Humica.EF.Models.SY.SYConstant.CURRENT_URL]" + "Receive?id=" + "@ViewData[Humica.EF.Models.SY.SYConstant.PARAM_ID]";
